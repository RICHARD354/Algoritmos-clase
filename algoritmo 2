#include <stdio.h>

int main(){
    int n;
    int i;
    int j;
    scanf("%d", &n);
    for(i=n ; i>=1; i--){
       for(j=0; j<i; j++){
           printf("%d ", j+1);
       }
       for(j=1; j<=n-i; j++){
           printf(" ");
       }
       for(j=1; j<=n-i; j++){
           printf(" ");
       }
       for(j=(i); j>0; j--){
           for(j=1; j<=n-i; j++){
           printf(" ");
           }
           for(j=1; j<=n-i; j++){
           printf(" ");
           }
           for(j=(i); j>0; j--){
           printf("%d ", j);
           }
       }
        printf("\n");
    }
    return 0;
}


